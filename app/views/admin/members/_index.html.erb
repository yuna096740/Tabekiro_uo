<table class="table table-borderless">
  <thead>
    <tr>
      <th>登録日時</th>
      <th>ユーザーネーム</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr class="border-bottom">
        <td>
          <%= link_to admin_member_path(member) do %>
            <%= member.created_at %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_member_path(member) do %>
            <%= member.nickname %>
          <% end %>
        </td>
        <td><%= member.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>