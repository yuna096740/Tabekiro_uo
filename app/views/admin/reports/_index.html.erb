<table class="table table-borderless">
  <thead>
    <tr>
      <th>通報日時</th>
      <th>通報者名</th>
      <th>ステータス</th>
      <th>通報ジャンル</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr class="border-bottom">
        <td>
          <%= link_to admin_report_path(report) do %>
            <%= report.created_at %>
          <% end %>
          </td>
        <td>
          <%= link_to admin_member_path(report.reporter_id) do %>
            <%= report.reporter.nickname %>
          <% end %>
        </td>
        <td><%= report.is_supported_i18n %></td>
        <td><%= report.genre_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>