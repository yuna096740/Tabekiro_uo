<div class="container">
  <div class="row my-5">
    <div class="col-md-8 offset-2">
      <h4>通報詳細</h4>
      <%= form_with model: @report, url: admin_report_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <thead>
            <tr>
              <th>通報者：</th>
              <th>
                <%= link_to admin_member_path(@report.reporter_id) do %>
                  <%= @report.reporter.nickname %>
                <% end %>
              </th>
            </tr>
          </thead>

          <thead>
            <tr>
              <th>ユーザーネーム：</th>
              <th>
                <%= link_to admin_member_path(@report.reported_id) do %>
                  <%= @report.reported.nickname %>
                <% end %>
              </th>
            </tr>
          </thead>

          <thead>
            <tr>
              <th>通報ジャンル：</th>
              <th><%= @report.genre_i18n %></th>
            </tr>
          </thead>

          <thead>
            <tr>
              <th>通報内容：</th>
              <th><%= @report.reason %></th>
            </tr>
          </thead>

          <thead>
            <tr>
              <th>ステータス変更：</th>
              <th class="d-flex">
                <%= f.select :is_supported, Report.is_supporteds_i18n.invert, {}, class:"form-control col-6" %>
                <%= f.submit '変更する', class:"btn btn-danger px-3 ml-3 rounded-pill" %>
              </th>
            </tr>
          </thead>
        </table>
      <% end %>
    </div>
  </div>
</div>