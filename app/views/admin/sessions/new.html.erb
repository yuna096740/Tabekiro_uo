<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>管理者ログイン</h2>

        <%= form_with model: @admin , url: session_path(resource_name) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password,"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-primary mt-3" %>
        </div>
        <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>