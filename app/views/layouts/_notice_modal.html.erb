<div class="rounded-circle" data-toggle="modal" data-target="#noticeModal">
  <% if notices.exists? %>
    <h5 class="dropdown-item py-2">
      <span class="text-danger"><i class="fas fa-bell"></i>通知</span>
    </h5>
  <% else %>
    <h5 class="dropdown-item py-2">
      <span class="text-primary"><i class="fas fa-bell"></i>通知</span>
    </h5>
  <% end %>
</div>
<div class="modal fade" id="noticeModal" rabindex="-1"
  role="dialog" aria-labelledby="noticeLabel" ariahidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="noticeLabel">通知一覧</h5>

        <% if notices.exists? %>
          <%= link_to destroy_all_notifications_path, method: :delete, class:"text-dark" do %>
            <p class="mx-1">ALL<i class="fas fa-trash"></i></p>
          <% end %>
        <% end %>
      </div>

      <div class="modal-body" id="notice">
        <% notices = notices.where.not(visiter_id: current_member.id) %>
        <% if notices.exists? %>
          <%= render 'public/notifications/notice', notices: notices %></div>
        <% else %>
          通知はありません
        <% end %>
      </div>
    </div>
  </div>
</div>