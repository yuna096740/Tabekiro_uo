<botton type="button" class="btn rounded-circle" data-toggle="modal" data-target="#noticeModal">
  <% if unchecked_notifications.exists? %>
    <span class="text-danger"><i class="fas fa-bell"></i></span>
  <% else %>
    <span class="text-primary"><i class="fas fa-bell"></i></span>
  <% end %>
</botton>
<div class="modal fade" id="noticeModal" rabindex="-1"
  role="dialog" aria-labelledby="noticeLabel" ariahidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="noticeLabel">通知一覧</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% notices = notices.where.not(visiter_id: current_member.id) %>
        <% if notices.exists? %>
          <% notices.each do |notice| %>
            <% visiter = notice.visiter %>
            <% visited = notice.visited %>

            <%= link_to member_path(visiter) do %>
              <%= image_tag visiter.icon, size: "30x30", class:"rounded-circle" %>
            <% end %>
            <%= visiter.nickname %>さんが

            <% if notice.action == 'subscribe' %>
              <p>あなたを登録しました</p><br>
            <% elsif notice.action == 'favorite' %>
              <%= link_to 'あなたの投稿', post_path(notice.post) %>
              <p>にいいねしました</p><br>
            <% else %>
              <%= link_to notice.post.title, post_path(notice.post) %>
              <p>にコメントしました</p><br>
            <% end %>
          <% end %>
        <% else %>
          <p>通知はありません</p>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>