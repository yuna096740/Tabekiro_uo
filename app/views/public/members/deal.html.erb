<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h4 class="my-3">取引中の投稿</h4>
      <% if @rooms.present? %>
        <% @rooms.each do |room| %>
          <table class="table table-borderless">
            <thead>
              <tr>
                <th>
                  <%= link_to post_path(room.post) do %>
                    <div data-aos="zoom-in" data-aos-duration="2000">
                      <%= image_tag room.post.get_post_image(100,100), class:"rounded" %>
                    </div>
                  <% end %>
                </th>
                <td>
                  <p class="mb-2"><b><%= link_to room.post.title, post_path(room.post), class:"text-dark" %></p></b>
                  <p class="mb-2">ステータス：<%= room.post.open_status_i18n %></p>
                  <p class="mb-2">投稿日：<%= time_ago_in_words(room.post.created_at).upcase %></p>
                </td>
                <td><%= link_to '詳細ページ', room_path(room), class:"btn btn-light mt-5" %></td>
              </tr>
            </thead>
          </table>
        <% end %>
      <% else %>
        <h5 class="text-center">取引中の投稿はありません。</h5>
      <% end %>
    </div>
  </div>
</div>