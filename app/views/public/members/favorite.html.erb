<div class="container">
  <% if @favorite_posts.present? %>
    <div class="row">
      <div class="col-md-8 offset-2">
        <h4 class="my-3">いいねした投稿</h4>
        <% @favorite_posts.each do |post| %>
          <table class="table table-borderless bg-light rounded" data-aos="zoom-in" data-aos-duration="1000">
            <thead>
              <tr>
                <th>
                  <%= link_to post_path(post) do %>
                    <%= image_tag post.get_post_image(100,100), class:"rounded ml-3" %>
                  <% end %>
                </th>
                <td>
                  <p class="mb-2"><b><%= link_to post.title, post_path(post), class:"text-dark" %></p></b>
                  <p class="mb-2">ステータス：<%= post.open_status_i18n %></p>
                  <p class="mb-2">投稿日：<%= time_ago_in_words(post.created_at).upcase %></p>
                </td>
                <td><%= link_to '詳細ページ', post_path(post), class:"btn btn-light mt-5 px-5" %></td>
              </tr>
            </thead>
          </table>
        <% end %>
      </div>
    </div>
    <div class="row mb-5">
      <div class="mx-auto mb-5">
        <%= paginate @favorite_posts, theme: 'bootstrap-5' %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <h5 class="mx-auto my-5">いいねしたお魚はありません。</h5>
    </div>
  <% end %>
</div>