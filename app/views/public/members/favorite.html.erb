<div class="container">
  <% if @favorite_posts.present? %>
    <div class="row">
      <div class="col-md-8">
        <%= image_tag 'topMyFavoLOGO.svg', class:"my-4" %>
        <div class="d-md-flex">
          <% @favorite_posts.each do |post| %>
            <div class="card mb-3 py-3 mx-md-3 bg-light col-md-4" data-aos="zoom-in" data-aos-duration="1000">
              <div class="text-center">
                <%= link_to post_path(post) do %>
                  <%= image_tag post.get_post_image(200,120), class:"rounded", style:"width:100%;" %>
                <% end %>
              </div>
              <p class="text-secondary text-right">最終更新:<%= time_ago_in_words(post.created_at).upcase %></p>

              <div class="card-body p-0">
                <h5 class="card-title"><b>
                  <%= link_to post_path(post), class:"text-dark" do %>
                    <%= truncate(post.title, length: 12) %>
                  <% end %>
                </b></h5>
                <p class="card-text">ステータス：<%= post.open_status_i18n %></p>

                <%= link_to '詳細ページ', post_path(post), class:"btn btn-outline-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row mb-5">
      <div class="mx-auto mb-5">
        <%= paginate @favorite_posts, theme: 'bootstrap-5' %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <h5 class="mx-auto my-5">いいねしたお魚はありません。</h5>
    </div>
  <% end %>
</div>