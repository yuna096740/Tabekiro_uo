<div class="container">
  <h4 class="mt-3">プロフィール</h4>
  <div class="row mt-3 mb-3 mx-auto">
    <div class="col-md-4 text-center">
      <div class="icon" data-aos="zoom-out-left" data-aos-duration="2000">
        <% if current_member.guest_member? %>
          <%= image_tag current_member.get_icon(150,150), class:"rounded-circle" %>
        <% else %>
          <%= link_to members_information_edit_path do %>
            <%= image_tag current_member.get_icon(150,150), class:"rounded-circle" %>
            <p class="text-dark">編集</p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 mt-3">
      <h3><%= link_to current_member.nickname, member_path(current_member), class:"text-dark" %></h3>
      <div class="d-flex mt-5">
        <h5 class="mr-5">過去の取引数: ◯回</h5>
        <h5 class="ml-5">Subscribe: <%= link_to current_member.subscribers.count, subscribers_member_relationships_path(current_member) %></h5>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-1 mb-3 mr-5">
      <h5><%= link_to '取引中のお魚', root_path, class:"text-dark" %> ＞</h5>
      <h5><%= link_to 'いいねしたお魚', favorite_members_path, class:"text-dark" %> ＞</h5>
      <h5><%= link_to '登録者一覧', subscribers_member_relationships_path(current_member), class:"text-dark" %> ＞</h5>
    </div>
  </div>
  <%= render 'public/members/member_posts', posts: @posts %>
</div>