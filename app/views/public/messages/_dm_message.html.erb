<div class="dm-height messageDetails scrollInner">
  <% @messages.each do |message| %>
    <div class="d-flex mt-2">
      <%= link_to member_path(message.member_id) do %>
        <%= image_tag message.member.icon,size:"45x45", class:"rounded-circle mr-1 mt-2" %>
      <% end %>
      <div class="bg-light text-dark p-2 rounded-pill mt-2">
        <%= message.message %>
        <%= l message.created_at, format: :short %>
      </div>
      <%= time_ago_in_words(notice.created_at).upcase %>
    </div>
  <% end %>
</div>