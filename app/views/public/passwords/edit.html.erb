<div class="container">
  <div class="row mx-auto my-5">
    <div class="col-md-5 offset-3">
      <%= form_with model: @member, url: password_path(resource_name), method: :put  do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="card">
          <div class="text-center">
            <div class="session_logo">
              <%= image_tag 'Tabekiro-uo-logo.svg' %>
            </div>
          </div>

          <div class="card-body">
            <span class="card-text">
              <%= f.label :password, "新しいパスワード" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>桁以上の半角英数字)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
            </span>

            <span class="card-text">
              <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </span>

            <div class="card-text">
              <%= f.submit "パスワードを更新", class:"btn btn-success form-control mt-3" %>
            </div>
          </div>
        </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
