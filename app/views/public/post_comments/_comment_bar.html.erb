<%= form_with model: [ post, comment ], local: false do |f| %>
  <table class="table table-bordered">
    <thead class="bg-light">
      <tr>
        <th id="postCommentCount">コメント数 : <%= @post.post_comments.count %>件</th>
      </tr>
    </thead>

    <tbody class="chat-height">
      <tr>
        <td id="postComments">
          <%= render 'public/post_comments/comments', post: @post %>
        </td>
      </tr>
    </tbody>

    <thead>
      <tr>
        <th class="d-flex">
          <% if member_signed_in? %>
            <%= f.text_area :comment, rows: 1, placeholder: "コメントを入力", required: true, class:"form-control" %>
            <%= button_tag type:'submit', class:"btn btn-success ml-3", id:"commentBtn" do %>
              <i class="fas fa-paper-plane"></i>
            <% end %>
          <% else %>
            ※コメント投稿にはログインが必要です。
          <% end %>
        </th>
      </tr>
    </thead>
  </table>
<% end %>
