 <div class="row my-5">
  <% posts.each do |post| %>
    <% unless post.open_status == 'unopened' %>
      <div class="col-4 mb-5">
        <div data-aos="zoom-in" data-aos-duration="2000">
          <%= link_to post_path(post) do %>
            <div class="text-dark"><b><%= post.title %></b></div>
            <%= image_tag post.get_post_image(350,300), class:"rounded" %>
          <% end %>

          <% if post.open_status == 'during_trade' %>
            <p class="text-success">取引中</p>
          <% elsif post.open_status == 'complete' %>
            <p class="text-danger">取引終了</p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
