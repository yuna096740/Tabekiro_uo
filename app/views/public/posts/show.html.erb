<div class="container my-5">
  <div class="row">
    <div class="col-md-7">
      <h4 class="mb-4">お裾分け詳細</h4>
      <div class="text-center">
        <%= image_tag @post.get_post_image(600,350) %>
      </div>

      <table class="table table-borderless">
        <tr>
          <th class="col-2">タイトル</th>
          <td><%= @post.title %></td>
        </tr>

        <tr>
          <th>紹介</th>
          <td><%= @post.introduction %></td>
        </tr>

        <tr>
          <th>取引期限</th>
          <td id="timeLimit">
            あと
            <span class="hour"></span>時間
            <span class="min"></span>分
            <span class="sec"></span>秒です。
          </td>
          <td id="hideLimit">
            取引は終了しました。
          </td>
        </tr>

        <tr>
          <th></th>
          <td></td>
        </tr>
      </table>
      <div class="text-center mb-5 mt-3">
        <% if @post.member == current_member %>
          <%= link_to '編集する', edit_post_path(@post), class:"btn btn-success px-5 mr-5" %>
          <%= link_to '削除する', post_path(@post), method: :delete, data: { confirm: "本当によろしいですか？"}, class:"btn btn-danger px-5" %>
        <% else %>
          <%= link_to '取引する', root_path, class:"btn btn-success px-5" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-4 offset-1 mt-5">
      <%= render 'public/post_comments/comment_bar', comment: @comment, comments: @comments, post: @post  %>
    </div>
  </div>

  <div class="row mt-3 mb-5">
    <div class="col-md-10 mx-auto mb-5">
      <div id="map" class="mapShow"></div>
    </div>
  </div>
</div>
