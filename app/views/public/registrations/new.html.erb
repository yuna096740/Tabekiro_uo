<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>新規登録</h2>

        <%= form_with model: @member, url: registration_path(resource_name) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :nickname, 'ユーザネーム' %><br />
            <%= f.text_field :nickname, autofocus: true, class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :email, 'メールアドレス' %><br />
            <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, 'パスワード' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>桁以上の半角英数字)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-6" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, 'パスワード(確認用)' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-6" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class:"btn btn-success" %>
          </div>
        <% end %>

        <%= render "public/shared/links" %>

    </div>
  </div>
</div>