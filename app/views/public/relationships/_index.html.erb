<% if members.exists? %>
  <div class="d-md-flex">
    <% members.each do |member| %>
      <div class="card mb-3 py-3 mx-md-3 bg-light col-md-4" data-aos="zoom-in" data-aos-duration="1000">
        <div class="text-center">
          <%= link_to member_path(member) do %>
            <%= image_tag member.get_icon(200,120), class:"rounded", style:"width:100%;" %>
          <% end %>
        </div>

        <div class="card-body p-0">
          <h5 class="card-title text-dark mt-2"><b>
            <%= truncate(member.nickname, length: 12) %>
          </b></h5>
          <p class="card-text">取引回数：<%= member.entries.count %></p>
          <p class="card-text">登録者：<%= link_to member.subscribers.count, subscribers_member_relationships_path(member) %></p>

          <div class="text-right">
            <%= link_to '詳細ページ', member_path(member), class:"btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center my-5">
    <% if current_page?(subscribings_member_relationships_path) %>
      <p>まだ登録していません。</p>
    <% else %>
      <p>まだ登録者はいません</p>
    <% end %>
  </div>
<% end %>
