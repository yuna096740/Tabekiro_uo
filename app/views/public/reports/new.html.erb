<div class="container">
  <%= form_with model: [@member, @report], url: confirm_member_reports_path, method: :post do |f| %>
    <div class="row ml-md-5">
      <div class="col-md-10 col-xs-12">
      <%= image_tag 'quitForm.svg', class:"my-3 offset-md-3" %>
        <div class="row offset-md-4">
          <div class="col-md-8 my-2">
            <p>ユーザーネーム</p>
            <h4><%= link_to @member.nickname, member_path(@member), class:"text-dark ml-3" %></h4>
          </div>

          <div class="col-md-8 my-2">
            <%= f.label :genre, '通報ジャンル選択(必須)' %>
            <%= f.select :genre, Report.genres_i18n.invert, {}, class:"form-control my-3" %>
          </div>

          <div class="col-md-8 my-2">
            <%= f.label :reason, '通報内容入力' %>
            <%= f.text_area :reason, rows: 3, placeholder: "入力してください", class:"form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto mt-3">
        <%= f.submit '通報内容確認画面へ', class:"btn btn-danger rounded-pill px-5 mb-5" %>
      </div>
    </div>
  <% end %>
</div>