<div class="container">
  <div class="row ">
    <div class="col-md-6 offset-3 my-5">
      <%= form_with model: @message do |f| %>
        <table class="table table-bordered">
          <thead class="bg-light">
            <tr>
              <th>メッセージ数：<%= @messages.count %></th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td>
                <div class="chat-height messageDetails scrollInner">
                  <% @messages.each do |message| %>
                    <div class="d-flex mt-2">
                      <%= link_to member_path(message.member_id) do %>
                        <%= image_tag message.member.icon,size:"45x45", class:"rounded-circle mr-1" %>
                      <% end %>
                      <div class="bg-light text-dark p-2 rounded-pill mt-1">
                        <%= message.message %><br>
                      </div>
                    </div>
                  <% end %>
                </div>
              </td>
            </tr>
          </tbody>

          <thead>
            <tr>
              <th class="d-flex">
                <%= f.text_area :message, rows: 1,class:"form-control" %>
                <%= f.hidden_field :room_id, value: @room.id %>
                <%= button_tag type:'submit', class:"btn btn-success ml-3" do %>
                  <i class="fas fa-paper-plane"></i>
                <% end %>
              </th>
            </tr>
          </thead>
        </table>
      <% end %>
    </div>
  </div>
</div>
<script>
  //コメントスクロール位置固定機能
  // packs/scrollComment.jsに記載
  document.addEventListener("turbolinks:load", () => {
    commentsScrollToEnd();
  });
</script>